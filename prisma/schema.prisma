generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int       @id @default(autoincrement())
  firstName     String
  lastName      String
  email         String    @unique
  phone         String    @unique
  passwordHash  String
  emailVerified Boolean   @default(false)
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
}

model EmailOtp {
  id        Int        @id @default(autoincrement())
  email     String
  code      String
  purpose   OtpPurpose
  expiresAt DateTime
  used      Boolean    @default(false)
  createdAt DateTime   @default(now())
  payload   Json?

  @@index([email, purpose, used])
}

enum Role {
  USER
  ADMIN
}

enum OtpPurpose {
  VERIFY_EMAIL
}
